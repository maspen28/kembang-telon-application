<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with white color -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
        </shape>
    </item>

    <!-- Original shape with stroke -->
    <item android:bottom="-2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/textAd" /> <!-- Stroke color and width -->
            <solid android:color="#00000000" /> <!-- Transparent color -->
        </shape>
    </item>
</layer-list>



